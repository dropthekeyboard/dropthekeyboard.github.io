{
  "phase1_scenario1_1": {
    "id": "phase1_scenario1_1",
    "title": "Restaurant Reservation (Call & SMS Fallback)",
    "description": "A customer asks their Agent to make a restaurant reservation. If the restaurant owner doesn't answer the call, the system automatically falls back to SMS, allowing the owner to respond with simple numerical inputs.",
    "agents": [
      {
        "type": "ai",
        "name": "customer_agent",
        "steps": []
      }
    ],
    "customer": {
      "type": "human",
      "name": "customer",
      "state": "message",
      "messageBox": {}
    },
    "servers": [
      {
        "type": "human",
        "name": "restaurant_owner",
        "state": "message",
        "messageBox": {}
      }
    ],
    "steps": [
      {
        "type": "send-message",
        "action": {
          "from": "customer",
          "to": "customer_agent",
          "content": "오늘 저녁 7시쯤, 친구들과 식당에서 모임을 하고 싶은데 적당한 장소 좀 찾아줘.",
          "type": "text"
        }
      },
      {
        "type": "make-call",
        "action": {
          "from": "customer_agent",
          "to": "restaurant_owner"
        }
      },
      {
        "type": "finish-call",
        "action": {
          "from": "customer_agent",
          "to": "restaurant_owner"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "customer_agent",
          "to": "restaurant_owner",
          "content": "Customer requested a reservation for 8/31 at 7 PM. Is this available? Reply 1 for yes, 2 for no, 3 for alternative time.",
          "type": "text"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "restaurant_owner",
          "to": "customer_agent",
          "content": "3 8pm",
          "type": "text"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "customer_agent",
          "to": "customer",
          "content": "7 PM is not available, but 8 PM is. Would you like to change?",
          "type": "text"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "customer",
          "to": "customer_agent",
          "content": "Yes, change to 8 PM.",
          "type": "text"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "customer_agent",
          "to": "restaurant_owner",
          "content": "Reservation confirmed for 8 PM",
          "type": "text"
        }
      }
    ]
  },
  "phase1_scenario1_2": {
    "id": "phase1_scenario1_2",

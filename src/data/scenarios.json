  "phase2_scenario2_2": {
    "id": "phase2_scenario2_2",
    "title": "Restaurant Reservation (CatchTable Integration)",
    "description": "The Lite Agent integrates with a third-party reservation platform like CatchTable, allowing customers to book through their Agent while still receiving platform-specific benefits.",
    "agents": [
      {
        "type": "ai",
        "name": "customer_agent",
        "steps": []
      }
    ],
    "customer": {
      "type": "human",
      "name": "customer",
      "state": "message",
      "messageBox": {}
    },
    "servers": [
      {
        "type": "ai",
        "name": "lite_agent",
        "steps": []
      },
      {
        "type": "human",
        "name": "restaurant_owner",
        "state": "message",
        "messageBox": {}
      }
    ],
    "steps": [
      {
        "type": "send-message",
        "action": {
          "from": "customer",
          "to": "lite_agent",
          "content": "Book a table for 2 tonight at 7 PM at [Restaurant Name] in Gangnam.",
          "type": "text"
        }
      },
      {
        "type": "api-call",
        "action": {
          "service": "catchtable",
          "request": "check availability 7PM"
        }
      },
      {
        "type": "api-response",
        "action": {
          "service": "catchtable",
          "response": "7PM full, 8PM available"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "lite_agent",
          "to": "customer",
          "content": "7 PM is fully booked, but 8 PM is available for 2 people. Change?",
          "type": "text"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "customer",
          "to": "lite_agent",
          "content": "Yes, 8 PM.",
          "type": "text"
        }
      },
      {
        "type": "api-call",
        "action": {
          "service": "catchtable",
          "request": "book 8PM table for 2"
        }
      },
      {
        "type": "api-response",
        "action": {
          "service": "catchtable",
          "response": "booking confirmed"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "customer_agent",
          "to": "customer",
          "content": "This restaurant has a CatchTable promotion for a free dessert this week. Confirm?",
          "type": "text"
        }
      },
      {
        "type": "send-message",
        "action": {
          "from": "customer",
          "to": "customer_agent",
          "content": "OK.",
          "type": "text"
        }
      }
    ]
